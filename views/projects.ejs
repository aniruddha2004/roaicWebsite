<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Robotics Club - Projects</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/universal.css">
  <link rel="stylesheet" href="/css/projects.css">
  <link rel="stylesheet" href="/css/header.css">
</head>
<body>

  <%- include('partials/header') %>

  <!-- Jumbotron -->
  <div class="jumbotron">
    <h1 class="display-4">Our Projects</h1>
  </div>

  <!-- Container for Projects -->
  <div class="container mt-5 wider-container">
    <h2>Our Projects</h2>

    <% if (projects && Object.keys(projects).length > 0) { %>
      <div class="row justify-content-start">
        <% for (let key in projects) { %>
          <div class="col-lg-4 col-md-6 d-flex align-items-stretch mb-4">
            <div class="card">
              <img src="<%= projects[key].image %>" class="card-img-top" alt="<%= projects[key].projectName %>">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= projects[key].projectName %></h5>
                <p class="card-text flex-grow-1"><%= projects[key].projectSummary %></p>
                <div class="mt-auto">
                  <% if (projects[key].isCompleted) { %>
                    <span class="completed-badge">Completed</span>
                  <% } else { %>
                    <span class="ongoing-badge">Ongoing</span>
                  <% } %>
                </div>
                <% if (user && user.admin) { %>
                  <a href="/projects/edit/<%= key %>" class="btn btn-warning mt-2">Edit Project</a>
                  <a href="/projects/delete/<%= key %>" class="btn btn-danger mt-2">Delete Project</a>
                <% } %>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    <% } else { %>
      <p>No projects available at the moment. Please check back later!</p>
    <% } %>

    <% if (user && user.admin) { %>
      <div class="text-center mt-4">
        <a href="/projects/add" class="btn btn-primary">Add Project</a>
      </div>
    <% } %>

  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
